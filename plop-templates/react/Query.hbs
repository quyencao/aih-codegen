import React, { Fragment } from 'react';
import gql from 'graphql-tag';
import { useQuery } from '@apollo/react-hooks';

const {{constantCase gql_type}} = gql`
    {{gql}}
`;

function {{properCase gql_type}}(props) {
    const { loading, error, data } = useQuery({{constantCase gql_type}});

    if (loading) {
        return (
            <div>Loading...</div>
        )
    }

    if (error) {
        return (
            <div>
                { `Error! ${error.message}` }
            </div>
        )
    }

    return (
        <Fragment>
            { props.children(data) }
        </Fragment>
    )
}

export default {{properCase gql_type}};